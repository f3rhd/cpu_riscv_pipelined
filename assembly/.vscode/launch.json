    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug main.exe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/fasm.exe",
            "args": ["test.sm","../schematics/output"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/usr/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ]
}